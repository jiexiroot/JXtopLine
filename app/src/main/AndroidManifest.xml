<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiexi.jxtopline">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- CC视频播放需要的权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".TopLineApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.VideoDetailActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".activity.JavaCountActivity"
            android:theme="@style/AppTheme.TransparentActivity" />
        <activity
            android:name=".activity.AndroidCountActivity"
            android:theme="@style/AppTheme.TransparentActivity" />
        <activity
            android:name=".activity.PythonActivity"
            android:theme="@style/AppTheme.TransparentActivity" />
        <activity
            android:name=".activity.NewsDetailActivity"
            android:theme="@style/AppTheme.TransparentActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>